#include "holberton.h"
/**
 * *infinite_add - check the code for Holberton School students.
 * @n1 : pointer
 * @n2 : pointer
 * @r : pointer
 * @size_r : size of buffer
 * Return: Always 0.
 */
char *infinite_add(char *n1, char *n2, char *r, int size_r)
{
	if (n1 >= 0 && n2 >= 0)
		{
			r = n1 + n2;

			return (*r);
		}
	else
		return (0);


}
