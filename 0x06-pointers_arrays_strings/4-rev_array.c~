#include "holberton.h"
/**
 * reverse_array - check the code for Holberton School students.
 * @a: an array of integers
 * @n: the number of elements to swap
 *
 * Return: nothing.
 */
void reverse_array(int *a, int n)
{


	int i = 0;


	for (; a[i] != '\0'; i++)
		{
			n++;

		}

	for (i = n - 1; i >= 0; i--)

		{
			_putchar(a[i]);
		}



	_putchar('\n');
}
